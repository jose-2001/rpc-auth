@page "{id:int?}"
@model rpc_auth.Pages.RPCUsers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (rpc_auth.Pages.RPCUsers.IndexModel.SignedIn)
{
    <div>
        <h4>RPCUser</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RPCUser.username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RPCUser.username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RPCUser.password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RPCUser.password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RPCUser.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RPCUser.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RPCUser.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RPCUser.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RPCUser.Birthdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RPCUser.Birthdate)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.RPCUser.ID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h1>Login pls</h1>
}