@page "{id:int?}"
@model rpc_auth.Pages.RPCUsers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@if (rpc_auth.Pages.RPCUsers.IndexModel.SignedIn)
{

    <h4>RPCUser</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RPCUser.ID" />
                <div class="form-group">
                    <label asp-for="RPCUser.username" class="control-label"></label>
                    <input asp-for="RPCUser.username" class="form-control" />
                    <span asp-validation-for="RPCUser.username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RPCUser.password" class="control-label"></label>
                    <input asp-for="RPCUser.password" class="form-control" />
                    <span asp-validation-for="RPCUser.password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RPCUser.FirstName" class="control-label"></label>
                    <input asp-for="RPCUser.FirstName" class="form-control" />
                    <span asp-validation-for="RPCUser.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RPCUser.LastName" class="control-label"></label>
                    <input asp-for="RPCUser.LastName" class="form-control" />
                    <span asp-validation-for="RPCUser.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RPCUser.Birthdate" class="control-label"></label>
                    <input asp-for="RPCUser.Birthdate" class="form-control" />
                    <span asp-validation-for="RPCUser.Birthdate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h1>Login pls</h1>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
